<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <com.sincerity.utilslibrary.view.BannerView.BannerView
        android:id="@+id/banner_view"
        android:layout_width="match_parent"
        android:layout_height="140dp"
        app:bottomColor="@color/gray_translucent"
        app:dotIndicatorFocus="@color/colorAccent"
        app:dotIndicatorGravity="right"
        app:dotIndicatorNormal="@color/colorPrimary"
        app:dotIndicatorSize="8dp"
        app:dotIndicatorSpacing="2dp" />

    <Button
        android:id="@+id/btn_request"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="网络请求" />

    <TextView
        android:id="@+id/tvResponse"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="20dp" />

</LinearLayout>